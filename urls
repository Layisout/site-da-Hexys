# core/urls.py
from django.urls import path
from . import views
from django.contrib.auth import views as auth_views

urlpatterns = [
    # Páginas Principais
    path('', views.index_view, name='index'), 
    path('loja/', views.store_view, name='store'), 
    path('carrinho/', views.cart_view, name='cart'), 
    
    # Autenticação
    path('login/', views.CustomLoginView.as_view(), name='login'), 
    path('logout/', auth_views.LogoutView.as_view(next_page='index'), name='logout'),
    path('cadastro/', views.RegisterView.as_view(), name='register'), 
    path('recuperar-senha/', views.password_reset_request_view, name='password_reset'), 
]
